modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[agent]
integrations = ["python_openai_ai_integrations:1.0.0", "google-mail:1.0.0"]
expertMode = true

[workflows]
runButton = "EchoPilot Bot"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EchoPilot Bot"

[[workflows.workflow]]
name = "EchoPilot Bot"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --worker-class gthread --workers 1 --threads 2 --timeout 120 --bind 0.0.0.0:5000 run:app"
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--worker-class", "gthread", "--workers", "1", "--threads", "2", "--timeout", "120", "--bind", "0.0.0.0:5000", "--reuse-port", "run:app"]

[[ports]]
localPort = 5000
externalPort = 80

