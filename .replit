modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "freetype", "glibcLocales", "grpc", "jq", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib", "yakut"]

[agent]
integrations = ["python_openai_ai_integrations:1.0.0", "google-mail:1.0.0"]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EchoPilot Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Scheduler"

[[workflows.workflow]]
name = "EchoPilot Bot"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn -w 1 -k gthread -t 120 --bind 0.0.0.0:5000 run:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Scheduler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -u scripts/exec_scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "cloudrun"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "-w", "2", "-k", "gthread", "-t", "120", "run:app"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32899
externalPort = 3001

[[ports]]
localPort = 34933
externalPort = 3000

[[ports]]
localPort = 40367
externalPort = 3002

[[ports]]
localPort = 44043
externalPort = 3003
